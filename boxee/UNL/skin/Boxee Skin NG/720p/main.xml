    <controls>
        <control type="group">
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <texture>background.jpg</texture>
            </control>
            <control type="image"> <!-- UNL Universal Header -->
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
