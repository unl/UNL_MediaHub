            <control type="image"> <!-- Metadata box -->
                <posx>600</posx>
                <posy>80</posy>
                <width>615</width>
                <height>573</height>
                <texture>metadataBox.png</texture>
            </control>
            <control type="wraplist" id="100">
                <posx>54</posx>
                <posy>123</posy>
                <width>500</width>
                <height>550</height>
                <visible>true</visible>
                <focusposition>3</focusposition>
                <orientation>vertical</orientation>
                <itemlayout width="500" height="67">
                    <control type="label">
                        <posx>40</posx>
                        <posy>0</posy>
                        <width>460</width>
                        <height>60</height>
                        <font>font26</font>
                        <align>left</align>
                        <aligny>center</aligny>
